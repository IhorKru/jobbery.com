{% extends 'base.html.twig' %}

{% block header %}
    <div class="subscribe-form" >
        <div class= "row">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="input-group margin-bottom-sm col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 col-sm-8 col-sm-offset-2 col-xs-12 text-center margin-f">
                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                <span class="form-control form-padding-set"> 
                    {{ form_label(form.firstname) }}
                    {{ form_widget(form.firstname) }}
                </span>
            </div>

            <div class="input-group margin-bottom-sm col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 col-sm-8 col-sm-offset-2 col-xs-12 text-center margin-f">
                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                <span class="form-control form-padding-set">
                    {{ form_label(form.lastname) }}
                    {{ form_widget(form.lastname) }}
                </span>    
            </div>

            <div class="input-group margin-bottom-sm col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 col-sm-8 col-sm-offset-2 col-xs-12 text-center margin-f">
                <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                <span class="form-control form-padding-set">
                    {{ form_label(form.emailaddress) }}
                    {{ form_widget(form.emailaddress) }}
                </span>
            </div>
            <div class="input-group margin-bottom-sm col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 col-sm-8 col-sm-offset-2 col-xs-12 text-center margin-f">
                 <span class="input-group-addon"><i class="fa fa-phone fa-fw"></i></span>
                 <span class="form-control form-padding-set">
                    {{ form_label(form.phone) }}
                    {{ form_widget(form.phone) }}
                 </span>
            </div>
            <div class="input-group margin-bottom-sm col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 col-sm-8 col-sm-offset-2 col-xs-12 text-center margin-f">
                <span class="input-group-addon"><i class="fa fa-venus-mars fa-fw"></i></span>
                <span class="form-control form-padding-set" style="border-radius: 5px">
                {{ form_label(form.gender) }}
                {{ form_widget(form.gender) }}
                </span>
            </div>
            <div class="picklist-style">
                <div class="checkbox input-group margin-bottom-sm col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
                    {{ form_widget(form.agreeterms) }}
                    <lable> {{ 'I have read and agreed to ' }} <a href="{{ path('terms') }}"> {{ 'Jobbery Terms & Conditions' }} </a> </lable>
                    {{ form_row(form.agreeterms) }}
                </div>
                <div class="checkbox input-group margin-bottom-sm col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
                    {{ form_widget(form.agreeemails) }}
                     <lable> {{ 'I want to get emails from Jobbery.com' }} </lable>
                    {{ form_row(form.agreeemails) }}
                </div>
                <div class="checkbox input-group margin-bottom-sm col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
                    {{ form_widget(form.agreepartners) }}
                    <lable> {{ 'I want to get mails from Partners of Jobbery.com' }} </lable>
                    {{ form_row(form.agreepartners) }}
                </div>
            </div>
            <div class="btn btn-dark btn-lg">
                {{ form_row(form.submit, { 'label': 'Subscribe to join' }) }}
            </div>    
                
            {{ form_end(form) }}    
        </div>    
    </div>
    
    <div class="window-BG" id="alert">
        <div class="window">
            <div id="alert-title" class="win-img-text">{{ 'Please solve below errors'|trans }}:</div>
            <div id="alert-text" class="win-text">
                <div style="color: white; text-align: justify;">
                    {{ form_errors(form) }}
                </div>    
            </div>
            <div class="window-close win-close-2">{{ 'Close'|trans }}</div>
        </div>
    </div>
{% endblock %}
