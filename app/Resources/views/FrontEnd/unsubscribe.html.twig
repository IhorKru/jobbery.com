{% extends 'base.html.twig' %}

{% block body %}
    <section id="about" class="about-un">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Unsubscription</h2>
                    <p class="lead"> We are really sorry you are leaving us. Please complete your email below to unsubscribe </a>.</p>
                        <div class="subscribe-form-un" style="width: 50%; margin: 0 auto;">
                            <div class= "row">
                                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                                <div class="input-group margin-bottom-sm col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 col-sm-8 col-sm-offset-2 col-xs-12 text-center margin-f">
                                    <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                                    <span class="form-control form-padding-set">
                                        {{ form_label(form.emailaddress) }}
                                        {{ form_widget(form.emailaddress) }}
                                    </span>
                                </div>
                                <div class="btn btn-dark btn-lg">
                                    {{ form_row(form.submit, { 'label': 'Unsubscribe' }) }}
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>
{% endblock %}
